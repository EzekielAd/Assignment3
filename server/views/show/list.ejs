      <div class="container-fluid">

      <a class="navbar-brand" href="/"><i class="fa-solid fa-user fa-lg"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

     <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

          <li class="nav-item">
          <% if (title == "Home Page") { %>
            <a class="nav-link active" aria-current="" href="/home">
          <% } else { %>
            <a class="nav-link" href="/home">
          <% } %>
            <i class="fa-solid fa-lg fa-house-user"></i>
            Home</a>
          </li>

            <li class="nav-item">
          <% if (title == "About Us") { %>
            <a class="nav-link active" href="/about">
          <% } else { %>
           <a class="nav-link" href="/about">
          <% } %>
            <i class="fa-solid fa-lg fa-circle-question"></i>
            About us</a>
          </li>
            <li class="nav-item">
          <% if (title == "Contact Us") {%>
            <a class="nav-link active" href="/contact">
          <% } else {%>
            <a class="nav-link" href="/contact">
          <% } %>
            <i class="fa-solid fa-envelope fa-lg"></i>Contact Us</a>
          </li>

          <li class="nav-item">
          <% if (title == "Projects Page") {%>
          <a class="nav-link active" href="/project">
          <% } else {%>
          <a class="nav-link"   href="/project">
          <% } %>
            <i class="fa-solid fa-gears fa-lg"></i>Projects</a>
          </li>

           <li class="nav-item">
          <% if (title == "Show List") {%>
            <a class="nav-link active" href="/showslist">
          <% } else {%>
            <a class="nav-link" href="/showslist">
          <% } %>
            <i class="fa-solid fa-film fa-lg"></i> Show List</a>
          </li>
        </ul>
      </div>
    </div> 
  </nav>
</header>


<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><% title %> </h1>  
            <h2>Heres a list of your Watched Shows</h2>
            <a href="/showslist/add" class="btn btn-primary" 
            role="button"><i class="fas fa-plus-circle"></i> Add Show</a>      
        <br>
        <table class="table table-bordered table-striped table-hover">
            <tr class="d-flex">
                <th class="text-center col-4">Title</th>
                <th class="text-center col-4">Genre</th>
                <th class="text-center col-4">Rating</th>
                <th class="text-center col-8">options</th>
            </tr>
            <% for(let count=0;count<ShowList.length;count++) { %>    
            <tr class="d-flex">
                <td class="text-center col-4"><%= ShowList[count].title %></td>
                <td class="text-center col-4"><%= ShowList[count].genre %></td>
                <td class="text-center col-4"><%= ShowList[count].rating %></td>
                <td class="text-center col-4">
                    <a href="/showslist/edit/<%= ShowList[count]._id %>" 
                        class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i> Edit
                    </a>
                </td>
                <td class="text-center col-4">
                    <a href="/showslist/delete/<%= ShowList[count]._id %>" 
                        class="btn btn-danger btn-sm">
                        <i class="fas trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
            <% } %>
        </table>
    </div>
    </div>
</main>


